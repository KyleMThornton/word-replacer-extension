{
    "manifest_version": 3,
    "name": "Word Replacer",
    "description": "Replace this word with that one.",
    "version": "1.0",
    "action": {
      "default_popup": "view.html",
      "default_icon": "replace.png"
    },
    "content_scripts": [
        {
          "js": ["scripts/content.js"],
          "matches": [
            "https://*/"
          ]
        }
      ]
  }